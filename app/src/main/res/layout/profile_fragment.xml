<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:id="@+id/ll_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_image"
        android:text="Name: XXXXXX XXXXX"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginTop="10dp"
            android:text="Age: XX"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginTop="10dp"
            android:text="Address: XXXX XXXX XX"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginTop="10dp"
            android:text="Mobile: XXXXXXX"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_details"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Your Orders:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/txt_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_order"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/dark_grey"
        android:text="ItemName: Biriyani"/>
    <LinearLayout
        android:id="@+id/ll_trackorder"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_item"
        android:layout_marginLeft="20dp"

        android:orientation="vertical">
    <TextView
        android:id="@+id/txt_trackorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:text="Track Order"/>
    </LinearLayout>
</RelativeLayout>