<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical"

        android:layout_centerInParent="true">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lay_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/et_username"
                style="@style/edit_text_pay_req_form"
                android:hint="User Name*"
                android:inputType="textCapSentences"
                android:maxLength="25"
                android:singleLine="true"
                android:textSize="@dimen/ins_txt_size_s" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/txt_user_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:text="Kindly enter valid username"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lay_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/et_pwd"
                style="@style/edit_text_pay_req_form"
                android:hint="Password*"
                android:inputType="textPassword"
                android:maxLength="25"
                android:singleLine="true"
                android:textSize="@dimen/ins_txt_size_s" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/txt_error_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:text="Kindly enter valid password"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/green_dark"
            android:text="Login"/>
    </LinearLayout>

</RelativeLayout>