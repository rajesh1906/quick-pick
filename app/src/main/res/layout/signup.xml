<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_signup">


    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/black_transprient"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"

            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/txt_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:typeface="serif"
                android:text="Create your free Account"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <EditText
                android:id="@+id/et_email"
                style="@style/edit_text_pay_req_form"
                android:inputType="textEmailAddress"
                android:maxLength="25"
                android:layout_toLeftOf="@+id/txt_verify_email"
                android:background="@drawable/shape_white"
                android:singleLine="true"
                android:textSize="@dimen/ins_txt_size_s" />
                <TextView
                    android:id="@+id/txt_verify_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:typeface="serif"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:text="Verify"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_email_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@color/red"
                android:visibility="invisible"
                android:text="Kindly enter valid username"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <EditText
                android:id="@+id/et_mobile"
                style="@style/edit_text_pay_req_form"
                android:inputType="phone"
                android:maxLength="10"
                android:background="@drawable/shape_white"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/txt_verify_mobile"
                android:textSize="@dimen/ins_txt_size_s" />
                <TextView
                    android:id="@+id/txt_verify_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:typeface="serif"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:text="Verify"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_mobile_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@color/red"
                android:visibility="invisible"
                android:text="Kindly enter valid mobile number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_username"
                style="@style/edit_text_pay_req_form"
                android:inputType="textCapSentences"
                android:maxLength="25"
                android:background="@drawable/shape_white"
                android:singleLine="true"
                android:textSize="@dimen/ins_txt_size_s" />

            <TextView
                android:id="@+id/txt_user_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@color/red"
                android:visibility="invisible"
                android:text="Kindly enter valid username"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_pwd"
                style="@style/edit_text_pay_req_form"
                android:inputType="textPassword"
                android:maxLength="25"
                android:singleLine="true"
                android:background="@drawable/shape_white"
                android:textSize="@dimen/ins_txt_size_s" />

            <TextView
                android:id="@+id/txt_error_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@color/red"
                android:visibility="invisible"
                android:text="Kindly enter valid password"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_confirm_pwd"
                style="@style/edit_text_pay_req_form"
                android:inputType="textPassword"
                android:maxLength="25"
                android:singleLine="true"
                android:background="@drawable/shape_white"
                android:textSize="@dimen/ins_txt_size_s" />

            <TextView
                android:id="@+id/txt_error_confirm_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@color/red"
                android:visibility="invisible"
                android:text="Kindly enter valid password"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_address"
                style="@style/edit_text_pay_req_form"
                android:inputType="textCapSentences"
                android:singleLine="true"
                android:background="@drawable/shape_white"
                android:textSize="@dimen/ins_txt_size_s" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Land Mark"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_landmark"
                style="@style/edit_text_pay_req_form"
                android:inputType="textCapSentences"
                android:singleLine="true"

                android:background="@drawable/shape_white"
                android:textSize="@dimen/ins_txt_size_s" />

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"
                android:textColor="@color/white"
                android:background="@color/green_dark"
                android:text="SignUp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>