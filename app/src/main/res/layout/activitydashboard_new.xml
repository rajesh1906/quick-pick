<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
        <include layout="@layout/header_view" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_header">

        <include layout="@layout/resatarunt_list_fragment" />
    </LinearLayout>


    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/menu_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        app:fab_iconSrc="@drawable/menu"
        android:visibility="visible"
        app:fab_backgroundColor="@color/white"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:id="@+id/ll_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/fab_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/fab_margin"
            android:visibility="invisible"
            app:fab_backgroundColor="@color/white"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:fab_iconSrc="@drawable/icon_filter" />
        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_gravity="bottom|end"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            app:elevation="6dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_alignParentRight="true"
            app:fab_backgroundColor="@color/white"
            app:pressedTranslationZ="12dp"
            app:fab_iconSrc="@drawable/menu"
            android:layout_toLeftOf="@+id/fab"
            />
        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:elevation="6dp"
            app:fab_backgroundColor="@color/white"
            app:pressedTranslationZ="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            app:fab_iconSrc="@drawable/pluse" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/container_serach"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
        <include
            layout="@layout/search_screen"/>

    </FrameLayout>
</RelativeLayout>