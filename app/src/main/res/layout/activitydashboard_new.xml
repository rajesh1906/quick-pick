<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <include layout="@layout/header_view" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_category"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:background="@drawable/border_view"
        android:layout_below="@+id/ll_header"
        android:weightSum="4">
        <TextView
            android:id="@+id/txt_book_table"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:typeface="serif"
            android:text="@string/book_table"/>
        <View
            android:id="@+id/view1"
            android:layout_width=".5dp"
            android:layout_height="40dp"
            android:background="@color/dark_grey"
            />
        <TextView
            android:id="@+id/txt_eat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:typeface="serif"
            android:text="@string/dine_in"/>
        <View
            android:id="@+id/view2"
            android:layout_width=".5dp"
            android:layout_height="40dp"
            android:background="@color/dark_grey"
            />
        <TextView
            android:id="@+id/txt_pickup"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical"

            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="14dp"
            android:text="@string/pickup"/>
        <View
            android:id="@+id/view3"
            android:layout_width=".5dp"
            android:layout_height="40dp"
            android:background="@color/dark_grey"
            />
        <TextView
            android:id="@+id/txt_delivery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="14dp"
            android:text="@string/home_delivery"/>
    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
    android:id="@+id/rel_adds"
    android:layout_width="match_parent"
    android:layout_height="150dp"
        android:visibility="gone"
    android:layout_below="@+id/ll_header_view"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/reviewpager"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/ll_dots"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:gravity="center"
            android:orientation="horizontal"/>
    </RelativeLayout>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_adds">

        <include layout="@layout/resatarunt_list_fragment" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/menu_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        app:fab_iconSrc="@drawable/menu_bar"
        android:visibility="gone"
        app:fab_backgroundColor="@color/white"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:id="@+id/ll_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/fab_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/fab_margin"
            android:visibility="invisible"
            app:fab_backgroundColor="@color/white"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:fab_iconSrc="@drawable/icon_filter" />
        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_gravity="bottom|end"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            app:elevation="6dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_alignParentRight="true"
            app:fab_backgroundColor="@color/white"
            app:pressedTranslationZ="12dp"
            app:fab_iconSrc="@drawable/menu_bar"
            android:layout_toLeftOf="@+id/fab"
            />
        <com.rey.material.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:elevation="6dp"
            app:fab_backgroundColor="@color/white"
            app:pressedTranslationZ="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/fab_margin"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/fab_margin"
            app:fab_iconSrc="@drawable/pluse" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/container_serach"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
        <include
            layout="@layout/search_screen"/>

    </FrameLayout>
</RelativeLayout>